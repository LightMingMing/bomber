<?xml version="1.0"?>
<!DOCTYPE Configuration>
<Configuration shutdownHook="disable" packages="org.ironrhino.core.log4j">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <ThresholdFilter level="${sys:console.logger.level}"/>
            <PatternLayout pattern="%d [%style{%15.15t}{magenta}] %style{%40.40c{1.}}{cyan} %highlight{%5.5p} %m%n"
                           noConsoleNoAnsi="false"/>
        </Console>
    </Appenders>
</Configuration>
